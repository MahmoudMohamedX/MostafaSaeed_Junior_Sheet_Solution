// -------------------------------------------------------------
// Problem: 490A - Team Olympiad
// Link: https://codeforces.com/contest/490/problem/A
// -------------------------------------------------------------

// Description:
// Each child in the school is good at exactly one subject:
// 1 → programming, 2 → maths, 3 → PE.
// Form teams of three children, each with different subjects.
// Calculate the maximum number of teams and output the teams.
// -------------------------------------------------------------

// Example:
// Input:
// 7
// 1 3 1 3 2 1 2
// Output:
// 2
// 3 5 2
// 6 7 4
// -------------------------------------------------------------

// Approach / Idea:
// - Separate children into three arrays according to their skill.
// - Find the minimum count among the three groups → this is the max number of teams.
// - Form teams by taking one child from each group in order.
// Type: Implementation / Ad-hoc
// -------------------------------------------------------------

// Time Complexity: O(n)   // n = number of children
// Memory Complexity: O(n) // store indexes of children in three arrays
// -------------------------------------------------------------

#include <bits/stdc++.h>
#define Fast ios::sync_with_stdio(false); cin.tie(NULL); cout.tie(NULL);

using namespace std;

int arr_one[5010] = {0};
int arr_two[5010] = {0};
int arr_three[5010] = {0};

int main()
{
    //  إِنَّهُۥ مَن يَتَّقِ وَيَصْبِرْ فَإِنَّ ٱللَّهَ لَا يُضِيعُ أَجْرَ ٱلْمُحْسِنِينَ﴾ - يوسف ٩٠﴿

    Fast;

    int n, cnt1 = 0, cnt2 = 0, cnt3 = 0;
    cin >> n;

    for(int i = 1; i <= n; ++i)
    {
        int m;
        cin >> m;

        if(m == 1)
            arr_one[cnt1++] = i;
        else if(m == 2)
            arr_two[cnt2++] = i;
        else
            arr_three[cnt3++] = i;
    }

    int w = cnt1;
    if(cnt2 < w) w = cnt2;
    if(cnt3 < w) w = cnt3;

    cout << w << endl;

    for(int i = 0; i < w; ++i)
    {
        cout << arr_one[i] << " " << arr_two[i] << " " << arr_three[i] << endl;
    }

    //  إِنَّهُۥ مَن يَتَّقِ وَيَصْبِرْ فَإِنَّ ٱللَّهَ لَا يُضِيعُ أَجْرَ ٱلْمُحْسِنِينَ﴾ - يوسف ٩٠﴿

    return 0;
}
